@using Entities.DTOs
@model Tuple<Date, List<DateDetailDto>>
@using Entities.Concrete
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-">
                <div class="sticky-top mb-3">

                    <div class="card">
                        <div class="card-header">
                            <h1 class="card-title">Randevular</h1>
                        </div>
                        <div class="card-body">
                            <!-- the events -->
                            <div id="external-events">
                                @foreach (var item in Model.Item2)
                                {
                                    <div>
                                        <div class="external-event bg-success" style="display: inline-block; margin-right: 10px;">
                                            @item.NationalityId
                                            @item.Name
                                            @item.DateTim.Date
                                        </div>
                                        <div class="btn btn-danger checked" style="display: inline-block; margin-top: 10px;">
                                            <a href="/Date/Delete/@item.Id" class="btn btn-danger">
                                                <i class="fas fa-trash"></i> İptal Et
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>