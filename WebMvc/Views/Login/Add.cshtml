@model Entities.Concrete.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Kullanıcı Ekleme</h1>
<br />
@using (Html.BeginForm("Add", "Login", FormMethod.Post))
{

    <div class="form-group">
        @Html.Label("Ad")
        @Html.TextBoxFor(m => m.FristName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FristName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Soyad")
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Kullanıcı Adı")
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Parola")
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <br /><br />
        <button class="btn btn-primary">
            <i class="fas fa-save">
            </i>
            Kaydet
        </button>
    </div>
}
         